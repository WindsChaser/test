<UserControl x:Class="ArrestForever.Role.Magic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="500">
    <Viewbox Stretch="Fill">
        <Canvas Width="500" Height="100">
            <Rectangle Name="frame" Width="500" Height="100" Stroke="#FF2EE8DF" StrokeThickness="16" RadiusX="45" RadiusY="45"/>
            <Rectangle Name="fill" Canvas.Top="8" Canvas.Left="8" Width="482" Height="84" RadiusX="45" RadiusY="45" StrokeThickness="0">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF2551C5" Offset="0"/>
                        <GradientStop Color="#FF2FB3F0" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
        </Canvas>
    </Viewbox>
</UserControl>
